@model ProfileFormViewModel

@{
    ViewData["Title"] = "Modify User";
}
<div class="col-md-4">
    <form asp-action="Edit" method="post">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>
        <input asp-for="Id" class="form-control" aria-required="true" maxlength="100" type="hidden" />
        <div class="form-floating mb-3">
            <input asp-for="FirstName" class="form-control" aria-required="true" maxlength="100" placeholder="First Name" />
            <label asp-for="FirstName">First Name</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="LastName" class="form-control" aria-required="true" maxlength="100" placeholder="Last Name" />
            <label asp-for="LastName">Last Name</label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="UserName" class="form-control" aria-required="true" maxlength="100" placeholder="User Name" />
            <label asp-for="UserName">User Name</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
       
        
        
        <button type="submit" class="w-100 btn btn-lg btn-primary mt-4 d-block">Save</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
